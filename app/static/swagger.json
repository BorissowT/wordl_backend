{
  "openapi": "3.0.3",
  "info": {
    "title": "Swagger Wordle - OpenAPI 3.0",
    "version": "1.0.11"
  },
  "tags": [
    {
      "name": "start",
      "description": "Initiate game"
    },
    {
      "name": "game",
      "description": "Game managment"
    }
  ],
  "paths": {
    "/game/{gameId}/status": {
      "get": {
        "tags": [
          "game"
        ],
        "description": "Use this endpoint to get status and score of all users of the game by game id.",
        "summary": "Use this endpoint to get status and score of all users of the game by game id.",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of the game",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "Authorisation",
            "in": "header",
            "required": true,
            "description": "put token in header to identify request",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "the dame started",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/gameStatusResponse"
                }
              }
            }
          },
          "400": {
            "description": "parameter validation failed"
          },
          "404": {
            "description": "gam not found or not started yet"
          }
        }
      }
    },
    "/game/{gameId}/ready": {
      "post": {
        "tags": [
          "game"
        ],
        "description": "Use this endpoint to set user status to \"ready\". Only Owner of the game is allowed to start the game.",
        "summary": "Use this endpoint to set user status to \"ready\"",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of the game",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "Authorisation",
            "in": "header",
            "required": true,
            "description": "put token in header to identify request",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "the game just started"
          },
          "400": {
            "description": "parameter validation failed"
          },
          "403": {
            "description": "you are not allowd to start the game"
          },
          "404": {
            "description": "the game was not found"
          }
        }
      }
    },
    "/game/{gameId}/scored": {
      "post": {
        "tags": [
          "game"
        ],
        "description": "call this endpoint when user solved a word to increase user score",
        "summary": "call this endpoint when user solved a word to increase user score",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/scored"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of the game",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          },
          {
            "name": "Authorisation",
            "in": "header",
            "required": true,
            "description": "put token in header to identify request",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user score is updated"
          },
          "400": {
            "description": "parameter validation failed"
          },
          "404": {
            "description": "the game was not found or has not started yet"
          }
        }
      }
    },
    "/start": {
      "post": {
        "tags": [
          "start"
        ],
        "description": "Use this endpoint to start a game",
        "summary": "Use this endpoint to start a game",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/startOwnerRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/startResponse"
                }
              }
            }
          },
          "400": {
            "description": "parameter validation failed"
          }
        }
      }
    },
    "/start/{gameId}": {
      "post": {
        "tags": [
          "start"
        ],
        "description": "Use this endpoint to enter game by invitation link",
        "summary": "Use this endpoint to enter game by invitation link",
        "parameters": [
          {
            "name": "gameId",
            "in": "path",
            "description": "ID of game",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/startJoinByLinkrRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/startResponse"
                }
              }
            }
          },
          "400": {
            "description": "parameter validation failed"
          },
          "403": {
            "description": "The game is full"
          },
          "404": {
            "description": "the game was not found"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "gameStatusResponse": {
        "type": "object",
        "properties": {
          "users": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "example": "1"
                },
                "username": {
                  "type": "string",
                  "example": "tim"
                },
                "score": {
                  "type": "integer",
                  "example": 50
                },
                "skin": {
                  "type": "integer",
                  "example": 2
                }
              }
            }
          },
          "words": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "startedAt": {
            "type": "string",
            "description": "Unix Timestamp",
            "example": "41342341"
          },
          "rounds": {
            "type": "integer",
            "example": 2
          },
          "lapTime": {
            "description": "time for a round in minutes",
            "type": "integer",
            "example": 2
          }
        }
      },
      "startOwnerRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "tim_user"
          },
          "skin": {
            "type": "integer",
            "example": 8
          },
          "rounds": {
            "type": "integer",
            "example": 2
          },
          "lapTime": {
            "description": "time for a round in minutes",
            "type": "integer",
            "example": 2
          },
          "amountUsers": {
            "description": "amount of users for game",
            "type": "integer",
            "example": 2
          }
        }
      },
      "startJoinByLinkrRequest": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "example": "tim_user"
          },
          "skin": {
            "type": "integer",
            "example": 8
          }
        }
      },
      "scored": {
        "type": "object",
        "properties": {
          "points": {
            "type": "string",
            "example": "10"
          }
        }
      },
      "startResponse": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "example": "SJDhdE21923"
          },
          "token": {
            "type": "string",
            "description": "This is an identification token. It has basic user info",
            "example": "askdjaskjfaksjfnkjsnduirhskjb.kdfkjg2903132"
          }
        }
      }
    }
  }
}